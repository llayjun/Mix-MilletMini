.task-root {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
  padding: 20rpx;
  background-color: #ffffff;
}

.task-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
}

.task-right-view {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
  margin-left: 20rpx;
}

.task-title {
  font-size: 30rpx;
  color: #000000;
}

.task-content {
  background-color: #f7f7f7;
  border-radius: 10rpx;
  width: 100%;
  display: flex;
  padding: 10rpx 5rpx;
  color: #bdbebe;
  margin: 10rpx 0;
}

.content-text {
  /* 定义为自适应布局   */
  display: -webkit-box;       
  /* 超出部分隐藏 */
  overflow: hidden;
  /* 竖直方向的超出隐藏 */
  -webkit-box-orient: vertical;  
  /* 限制最多2行 */
  -webkit-line-clamp: 2;
  font-size: 18rpx;
}

.task-bottom-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-top: 10rpx;
}
