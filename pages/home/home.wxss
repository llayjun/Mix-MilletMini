/**home.wxss**/
.background-image {
  width: 100%;
  position: absolute;
  left: 0px;
  top: 0px;
}

.root-view {
  position: absolute;
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.top-view {
  display: flex;
  width: 100%;
  flex-direction: row;
  margin-top: 20rpx;
  justify-content: center;
  align-items: center;
}

.search-input {
  border-radius: 15rpx;
  background-color: #ffffff;
  font-size: 25rpx;
  flex: 1;
  margin: 0 20rpx;
  padding: 5rpx 20rpx;
}

.swipper-view {
  display: flex;
  width: 90%;
  justify-content: center;
  align-items: center;
}

swiper {
  width: 100%;
  height: 300rpx;
}
swiper image {
  border-radius: 20rpx;
  width: 100%;
  height: 100%;
}

.recommend-view {
    flex-direction: row;
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin: 20rpx 0;
}

.scroll-x{
  white-space:nowrap;
  display:flex;
}

.view-parent{
  display:inline-block;
}

.title-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}