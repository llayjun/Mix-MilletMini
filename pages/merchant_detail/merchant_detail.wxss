.top-view {
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: flex-start;
  width: 100%;
}

.top-view-right {
  font-size: 16rpx;
  background-color: #fa0202;
  border-radius: 10rpx;
  color: #ffffff;
  padding: 10rpx;
}

.top-view-left {
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: flex-start;
}

.top-view-left image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.top-view-left view {
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  margin-left: 20rpx;
  flex-direction: column;
  align-items: flex-start;
  height: 120rpx;
}

.swipper-view {
  display: flex;
  width: 90%;
  justify-content: center;
  align-items: center;
}

swiper {
  width: 100%;
  height: 300rpx;
}
swiper image {
  border-radius: 20rpx;
  width: 100%;
  height: 100%;
}

.view-info-base {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 15rpx 0;
}

